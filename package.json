{
    "name": "template-typescript",
    "version": "0.0.0",
    "description": "Description",
    "main": "src/index.ts",
    "scripts": {
        "doc": "docsify serve ./docs --port 3001",
        "test": "jest",
        "dev": "NODE_ENV=dev nodemon ./src/index",
        "prebuild": "rm -rf dist",
        "build": "tsc",
        "prestart": "npm ci",
        "start": "node src/index.js"
    },
    "dependencies": {
        "@prisma/client": "^3.7.0",
        "cors": "^2.8.5",
        "docsify": "^4.12.1",
        "express": "^4.17.1",
        "joi": "^17.4.2",
        "module-alias": "^2.2.2",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.2.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.11",
        "@types/supertest": "^2.0.11",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "dotenv": "^10.0.0",
        "dotenv-expand": "^5.1.0",
        "jest": "^27.4.3",
        "nodemon": "^2.0.15",
        "prisma": "^3.7.0",
        "supertest": "^6.1.6",
        "ts-jest": "^27.1.0",
        "ts-node": "^10.4.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/author/project.git"
    },
    "keywords": [
        "NodeJS",
        "ExpressJS",
        "TypeScript",
        "Docker",
        "Prisma",
        "PostgreSQL"
    ],
    "author": "@author",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/author/project/issues"
    },
    "homepage": "URL",
    "config": {
        "env": {
            "DOMAIN": "Domain of server",
            "MODE": "Mode of runtime",
            "PORT": "Connection port of server"
        },
        "directories": {
            "dist": "Boundle generated by Typescript",
            "debug": "Debug files scripts for Unit Tests",
            "docs": "Documentation directory [ Docsify ]",
            "markdown": "Files description repository",
            "project": "Additional diagrams, schemas, etc.",
            "src": "Source code base",
            "src/config": "Environment variables",
            "src/libs": "drivers connection directory",
            "src/routes": "Endpoints definition",
            "src/services": "controller directory",
            "src/middlewares": "express middlewares handlers",
            "src/utils": "other tools",
            "src/validators": "other tools",
            "test": "testing directory [ Jest, Supertest ]"
        }
    },
    "engines": {
        "node": "14.x"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "_moduleAliases": {
        "@src": "./src",
        "@config": "./src/config",
        "@controllers": "./src/controllers",
        "@middlewares": "./src/middlewares",
        "@routes": "./src/routes",
        "@utils": "./src/utils",
        "@validators": "./src/validators"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/dist/"
        ],
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1",
            "@config/(.*)": "<rootDir>/src/config/$1",
            "@controllers/(.*)": "<rootDir>/src/controllers/$1",
            "@middlewares/(.*)": "<rootDir>/src/middlewares/$1",
            "@routes/(.*)": "<rootDir>/src/routes/$1",
            "@utils/(.*)": "<rootDir>/src/utils/$1",
            "@validators/(.*)": "<rootDir>/src/validators/$1"
        }
    },
    "prisma": {
        "schema": "./prisma/schema.prisma",
        "seed": "babel-node ./prisma/seed.js"
    }
}
